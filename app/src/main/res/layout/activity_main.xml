<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/faust" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/oldfashioned" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/screwdriver" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/cosmopolitan" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/godfather" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/manhattan" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/eggnog" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/martini" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/mojito" />

    </LinearLayout>



</LinearLayout>

